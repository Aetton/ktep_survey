extends base.jade

block content
    div.row
        div.col-md-8
            div.card
                form(method='post')
                    div.card-body
                        h2.card-title
                            input.form-control(type='text', name='title', id='title', required, maxlength="80", placeholder='Заголовок статьи')
                        p.card-text
                            textarea.form-control(name='body', id='body', required, cols=200, rows=25, placeholder='Текст статьи')

                            input.btn.btn-primary(type='submit', value='Опубликовать')